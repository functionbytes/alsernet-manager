#!/bin/bash

# Pre-commit hook para generar documentaci√≥n de comandos artisan autom√°ticamente
# Copiar este archivo a .git/hooks/pre-commit y dar permisos ejecutables

# Colores para output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Variables
COMMANDS_DIR="app/Console/Commands"
PROJECT_ROOT="$(git rev-parse --show-toplevel)"

# Verificar si hay cambios en el directorio de comandos
if git diff --cached --quiet -- "$COMMANDS_DIR"; then
    exit 0
fi

echo -e "${YELLOW}üìö Detectados cambios en comandos, generando documentaci√≥n...${NC}"

# Cambiar al directorio del proyecto
cd "$PROJECT_ROOT"

# Ejecutar el comando para generar documentaci√≥n
if php artisan docs:generate-commands > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Documentaci√≥n de comandos actualizada${NC}"

    # Agregar los cambios en la documentaci√≥n al commit
    git add manual/ARTISAN_COMMANDS.md

    exit 0
else
    echo -e "${RED}‚ùå Error al generar documentaci√≥n de comandos${NC}"
    exit 1
fi
